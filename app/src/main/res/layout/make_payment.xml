<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="15dp"
    android:layout_marginHorizontal="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_200"
            android:textSize="18sp"
            android:fontFamily="@font/larsseit"
            android:text="Payer Information"
            android:textStyle="bold"
            android:padding="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@color/teal_700"
            android:fontFamily="@font/larsseit"
            android:id="@+id/payerName"
            android:padding="10dp"
            android:layout_marginVertical="5dp"
            android:inputType="textPersonName"
            android:hint="Enter payer's name"
            android:maxLines="1"
            android:background="@drawable/edt"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@color/teal_700"
            android:layout_marginVertical="5dp"
            android:fontFamily="@font/larsseit"
            android:id="@+id/payerPhone"
            android:padding="10dp"
            android:inputType="phone"
            android:hint="+234801234567"
            android:maxLines="1"
            android:background="@drawable/edt"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/teal_700"
            android:layout_marginVertical="5dp"
            android:fontFamily="@font/larsseit"
            android:id="@+id/payerEmail"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:hint="you@email.com"
            android:maxLines="1"
            android:background="@drawable/edt"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp">
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/paymentMethod"
                android:background="@drawable/edt"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp">
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edt"
                android:id="@+id/shift"
                />

        </FrameLayout>

    </LinearLayout>
</RelativeLayout>